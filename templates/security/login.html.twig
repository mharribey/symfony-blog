{% extends 'base.html.twig' %}

{% block title %}Log In{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="d-flex m-3 p-3 flex-column w-75 mx-auto card">

        {{ form_start(form) }}

        {{ form_errors(form, {attr: {class:"btn btn-danger"}}) }}

        <div class="d-flex flex-column">
            {{ form_label(form._username) }}
            {{ form_widget(form._username) }}
        </div>


        <div class="d-flex flex-column">
            {{ form_label(form._password) }}
            {{ form_widget(form._password) }}
        </div>

        <div class="d-flex flex-column my-3 mx-auto w-25">
            {{ form_label(form.login) }}
            {{ form_widget(form.login, {attr: {class:"btn btn-primary"}}) }}
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
